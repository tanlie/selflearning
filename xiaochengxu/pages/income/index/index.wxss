swiper{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 50px;
  height: auto;
}
swiper .item{
  height:100%;
}
.custom-tabs{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 50px;
  overflow: hidden;
  border-top: solid 1rpx #eee;
}
.custom-tabs .custom-tab.curr{
  border-bottom: 0;
}

.radio-box .weui-cell {
  width: 20%;
}
.sub-page2 .tot-amt{
  text-align: center;
  font-weight: bold;
  padding:10px;
}
.sub-page2 .flex-box{
  margin: 0 10px 15px 10px;
}
.sub-page2 .list-block{
  margin: 20px 10px;
  background-color: #fff;
  font-size: 13px;
}
.sub-page2 .list-block .weui-cell{
  padding: 8px 15px;
}
.sub-page2 .list-block .sub-title{
  background-color: #ef6c62;
  color: #fff;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.sub-page2 .list-block .sub-tot{
  border-bottom: solid 1rpx #eee;
}
.sub-page2 .list-block .weui-cell:before {
  display: none;
}
.sub-page2 .show-over{
  height: 10px;
}

.sub-page3 .chat-box{
  margin: 15px;
  box-shadow: 0 0 5px 1px #e5e5e5;
}
.sub-page1 .chat-box .weui-cell,.sub-page3 .chat-box .weui-cell{
  position: relative;
  padding:15px;
}
.sub-page1 .chat-img,.sub-page3 .chat-img{
  position: absolute;
  left: 0;
  top: 3px;
  bottom: 3px;
  background-color: #e42112;
  z-index: 0;
  margin:5px; 
  opacity: 0.3;
}